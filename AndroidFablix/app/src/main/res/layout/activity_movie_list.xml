<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieListActivity">

    <TextView
            android:text="Movie List"
            android:layout_width="309dp"
            android:layout_height="29dp" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
            android:textSize="24sp" android:textColor="#000000" android:gravity="center"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/movielist"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="80dp"/>
    <Button
            android:text="prev"
            android:layout_width="72dp"
            android:layout_height="36dp" android:id="@+id/prev"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/movielist" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
    <Button
            android:text="next"
            android:layout_width="72dp"
            android:layout_height="36dp" android:id="@+id/next"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/movielist" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp"
            app:layout_constraintStart_toEndOf="@+id/prev" app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>